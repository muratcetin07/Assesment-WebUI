@model BookViewModel

@{
    ViewData["Title"] = "Index";
    var i = 0;
}

<h1> Book Catalogue </h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Text</th>
            <th scope="col" style="text-align:right">Purchase Price</th>
            <th scope="col">Subscribe</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model?.BookResponse?.Books)
        {
            i++;
        <tr>
            <th scope="row">@i</th>
            <td scope="row">@item.Name</td>
            <td scope="row">@item.Text</td>
            <td scope="row" style="text-align:right">$@item.PurchasePrice</td>
            <td>
                @Html.ActionLink("Subscribe", "Subscribe", "Home", new { BookId = item.Id })
            </td>
        </tr>
        }

    </tbody>
</table>

